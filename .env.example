# AuraTrade Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for LLM-powered analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Alpaca Trading API Keys (required for live trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Trading Environment (development/production)
AURA_ENVIRONMENT=development

# Logging Level (DEBUG/INFO/WARNING/ERROR)
AURA_LOG_LEVEL=INFO

# Trading Configuration
AURA_MAX_POSITION_SIZE=0.25    # Maximum position size as % of portfolio (0.25 = 25%)
AURA_MAX_DRAWDOWN_LIMIT=0.10   # Maximum portfolio drawdown (0.10 = 10%)
AURA_DAILY_LOSS_LIMIT=0.05     # Maximum daily loss (0.05 = 5%)
AURA_RISK_PER_TRADE=0.02       # Risk per trade as % of portfolio (0.02 = 2%)
AURA_MIN_CONFIDENCE=0.3        # Minimum confidence threshold for trading

# Agent Weights (must sum to 1.0)
AURA_TECHNICAL_WEIGHT=0.35     # Weight for technical analysis
AURA_FUNDAMENTAL_WEIGHT=0.40   # Weight for fundamental analysis  
AURA_SENTIMENT_WEIGHT=0.25     # Weight for sentiment analysis

# Data Configuration
AURA_CACHE_TTL=300            # Data cache TTL in seconds
AURA_NEWS_HOURS_BACK=24       # Hours of news to analyze

# Broker Configuration
AURA_BROKER_TYPE=paper_trading # Broker type: alpaca, paper_trading
AURA_INITIAL_CASH=100000.0     # Initial cash for paper trading
ALPACA_PAPER=true              # Use Alpaca paper trading (true/false)

# Optional: Additional API Keys for enhanced data sources
# POLYGON_API_KEY=your_polygon_api_key_here
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
# NEWS_API_KEY=your_news_api_key_here